{% extends 'base.html.twig' %}

{% block title %}Weather index{% endblock %}

{% block body %}
    <h1>Weather index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data_time</th>
                <th>Weather_code</th>
                <th>Weather_name</th>
                <th>Temperature_min</th>
                <th>Temperature_max</th>
                <th>Rain_percentage</th>
                <th>Pinpoint_code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weather in weathers %}
            <tr>
                <td>{{ weather.id }}</td>
                <td>{{ weather.dataTime }}</td>
                <td>{{ weather.weatherCode }}</td>
                <td>{{ weather.weatherName }}</td>
                <td>{{ weather.temperatureMin }}</td>
                <td>{{ weather.temperatureMax }}</td>
                <td>{{ weather.rainPercentage }}</td>
                <td>{{ weather.pinpointCode }}</td>
                <td>
                    <a href="{{ path('weather_show', {'id': weather.id}) }}">show</a>
                    <a href="{{ path('weather_edit', {'id': weather.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('weather_new') }}">Create new</a>
{% endblock %}
